<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">
    <include
        android:id="@+id/topBar_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        layout="@layout/tool_bar_comp"
        />
    <include
        android:id="@+id/app_fragment_container"
        layout="@layout/fragment_container_view"
        />
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="bottom"
        android:clipToPadding="false"
        android:padding="0dp"
        android:paddingVertical="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:paddingBottomSystemWindowInsets="false"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_app_bar_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/bottom_nav"
            app:labelVisibilityMode="labeled"
            android:fitsSystemWindows="false"
            app:itemActiveIndicatorStyle="@android:color/transparent"
            android:padding="0dp"
            android:elevation="0dp"
            app:itemRippleColor="@android:color/transparent"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"
            app:itemTextColor="@color/bottom_tint_color"
            app:itemIconTint="@color/bottom_tint_color"
            android:background="?android:attr/windowBackground"
            />
    </com.google.android.material.bottomappbar.BottomAppBar>
</androidx.coordinatorlayout.widget.CoordinatorLayout>