<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/event_card_shape_ly"
    >
    <ImageView
        android:id="@+id/event_card_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/event_test_img"
        />
    <TextView
        android:id="@+id/event_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/event_card_img"
        tools:text="Luxor and Aswan"
        style="@style/black_16_bold"
        android:paddingHorizontal="8dp"
        />
    <TextView
        android:id="@+id/event_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/event_title_tv"
        app:layout_constraintStart_toEndOf="@id/event_card_img"
        style="@style/graySecondry_14_regular"
        tools:text="Explore Karnak Temple, Valley of the Kings and Luxor Temple..."
        />

    <TextView
        android:id="@+id/event_location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:drawableStartCompat="@drawable/event_location_icv"
        app:layout_constraintStart_toEndOf="@id/event_card_img"
        app:layout_constraintTop_toBottomOf="@id/event_desc_tv"
        tools:text="Egypt"
        android:textColor="@color/black_color"
        style="@style/graySecondry_14_regular"
        />
    <TextView
        android:id="@+id/event_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        app:drawableStartCompat="@drawable/event_calender_icv"
        app:layout_constraintStart_toEndOf="@id/event_card_img"
        app:layout_constraintTop_toBottomOf="@id/event_location_tv"
        tools:text="10/2/2025"
        android:textColor="@color/black_color"
        style="@style/graySecondry_14_regular"
        />

</androidx.constraintlayout.widget.ConstraintLayout>