<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.app.home.HomeMainFragment">
    <include
        android:id="@+id/event_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_viewmore_field"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/event_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/event_card_item"
        android:orientation="horizontal"
        tools:itemCount="4"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <include
        android:id="@+id/announcement_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_viewmore_field"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/event_recycler_view"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/announcement_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/announcement_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/announcement_card_item"
        android:orientation="horizontal"
        tools:itemCount="4"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <include
        android:id="@+id/category_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_viewmore_field"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/announcement_recycler_view"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_recycler_view"
        app:layout_constraintTop_toBottomOf="@id/category_title_viewmore_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/category_card_item"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:itemCount="7"
        />

    <ProgressBar
        android:id="@+id/progress_bar_ly"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminateTint="@color/primary_color"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>