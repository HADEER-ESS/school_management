<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/switcher_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/role"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="16dp"
        style="@style/black_16_bold"
        />
    <RadioGroup
        android:id="@+id/radio_container_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/switcher_item_title"
        android:background="@drawable/radio_container_ly"
        >
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_first_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher"
            android:paddingEnd="50dp"
            android:button="@null"
            android:drawableStart="@drawable/radio_view_action_selectors"
            android:drawablePadding="10dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/primary_color"
            />
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_second_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parent_selection"
            android:layout_marginStart="50dp"
            android:button="@null"
            android:drawableStart="@drawable/radio_view_action_selectors"
            android:drawablePadding="10dp"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>